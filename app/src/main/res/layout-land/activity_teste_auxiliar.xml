<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2CCFF"
    tools:context=".TesteAuxiliarActivity">

    <TextView
        android:id="@+id/tvTesteAuxiliar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Marque de acordo com as características do seu lar e do seu perfil:"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnResultadoTeste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#6200EE"
        android:text="Resultado"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbAF4"
        app:layout_constraintVertical_bias="1.0" />

    <CheckBox
        android:id="@+id/cbAF1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Sua casa tem quintal."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTesteAuxiliar" />

    <CheckBox
        android:id="@+id/cbAF2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gosta de animais de porte pequeno."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbAF1" />

    <CheckBox
        android:id="@+id/cbAF3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gosta de animais de porte médio/grande."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbAF2" />

    <CheckBox
        android:id="@+id/cbAF4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Você geralmente é muito ocupado."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.623"
        app:layout_constraintStart_toEndOf="@+id/cbAF9"
        app:layout_constraintTop_toBottomOf="@+id/cbAF8"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/cbAF5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Prefere animais menos agitados."
        app:layout_constraintBottom_toTopOf="@+id/btnResultadoTeste"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbAF9"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/cbAF6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Sua casa é pequena."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toEndOf="@+id/cbAF1"
        app:layout_constraintTop_toBottomOf="@+id/tvTesteAuxiliar" />

    <CheckBox
        android:id="@+id/cbAF7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Você tem uma condição finaceira satisfatória."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.877"
        app:layout_constraintStart_toEndOf="@+id/cbAF2"
        app:layout_constraintTop_toBottomOf="@+id/cbAF6" />

    <CheckBox
        android:id="@+id/cbAF8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Prefere animais que são mais fáceis de cuidar."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.864"
        app:layout_constraintStart_toEndOf="@+id/cbAF3"
        app:layout_constraintTop_toBottomOf="@+id/cbAF7" />

    <CheckBox
        android:id="@+id/cbAF9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Você geralmente é paciente."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbAF3" />
</androidx.constraintlayout.widget.ConstraintLayout>